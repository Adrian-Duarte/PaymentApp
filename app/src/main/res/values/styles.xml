<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!-- FONTS -->

    <!-- Larger -->
    <style name="LargerFont">
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="LargerFont.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="LargerFont.Primary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargerFont.Black">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
    </style>

    <style name="LargerFont.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Large -->
    <style name="LargeFont">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="LargeFont.Black">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="LargeFont.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="LargeFont.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Normal -->
    <style name="NormalFont">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="NormalFont.Black">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="NormalFont.Gray">
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="NormalFont.Gray.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalFont.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="NormalFont.Primary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalFont.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="NormalFont.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
